{
  "name": "GistViewer",
  "version": "1.0.0",
  "main": "./main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TangChr/GistViewer.git"
  },
  "author": "Christian Tang <christian@tcdev.dk> (http://seaweed.dk)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TangChr/GistViewer/issues"
  },
  "devDependencies": {
    "asar": "^0.12.3",
    "electron-builder": "^6.0.2",
    "electron-packager": "^7.7.0",
    "electron-prebuilt": "^0.30.3",
    "shelljs": "^0.7.4"
  },
  "dependencies": {
    "jhub": "^2.3.1"
  },
  "scripts": {
    "start": "electron .",
    "build:win32": "electron-packager . ./GistViewer --out=dist --platform=win32 --arch=ia32 --ignore=node_modules/electron-* --overwrite",
    "build:win64": "electron-packager . ./GistViewer --out=dist --platform=win32 --arch=x64 --ignore=node_modules/electron-* --overwrite",
    "build": "npm run build:win32 && npm run build:win64",
    "pack": "asar pack dist/GistViewer-win32-ia32/resources/app dist/GistViewer-win32-ia32/resources/app.asar"
  }
}
